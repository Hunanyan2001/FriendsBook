@using IProject.Models;
@*@model Tuple<List<FileModel>,List<PhotoCovers>>;*@
@model Tuple<List<FileModel>,List<PhotoCovers>,List<User>>;
@{
    ViewData["Title"] = "AllUsers";
    Layout = "_Layout";
}
<body>
    @Html.Partial("~/Views/Account/PageUser.cshtml")

</body>
<footer class="border-top footer text-muted">
    <div>
        <h3 style="background-color:black;color:white">New Accounts</h3>
        @foreach (var f in Model.Item3)
        {
            <p>
                @foreach (var item in Model.Item1)
                {

                    @if (Model.Item1.Count != 0)
                    {
                        @if (f.Id == item.UserId)
                        {
                            <a asp-controller="Friend" asp-action="ShowUserPage">
                                <img style="border-radius:50%" src="@Url.Content(Model.Item1.Where(p=>p.UserId==f.Id).Last().Path)" height="100" width="100">
                                </a>
                            break;
                        }
                    }
                }
                    <a asp-action="ShowUserPage" asp-controller="Friend" asp-route-id="@f.Id">@f.Email</a>
                    <label>@f.Year</label>
                    <a style="color:blue" asp-action="AddFriend" asp-route-id="@f.Id" asp-controller="Friend">AddFriend</a>
                </p>
            }
        </div>
    </footer>
