@model IProject.ViewModels.LoginViewModel

<h2>Login</h2>

<body class="text-center">
    <form class="form-signin" method="post" asp-controller="Account" asp-action="Login"
        asp-route-returnUrl="@Model.ReturnUrl">
    <div asp-validation-summary="ModelOnly"></div>
      <img class="mb-4" src="/img/transparent-logo-black-and-white-line-font-eye-whiteline-artcoloring-bookblack-and-whitebird5d9731fe864af2.2099816215701898225501.png" alt="" width="100" height="50">
      <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
      <input style="width:20%;height:20%;margin-left:auto;margin-right:auto" asp-for="Email" id="inputEmail" class="form-control" placeholder="Email address" required="" autofocus="">
      <span asp-validation-for="Email"></span>
      <input style="width:20%;margin-left:auto;margin-right:auto" asp-for="Password" id="inputPassword" class="form-control" placeholder="Password" required="">
      <span asp-validation-for="Password"></span>
      <button style="width:20%;margin-left:auto;margin-right:auto" class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
      <div class="checkbox mb-3">
        <label>
          <input asp-for="RememberMe" value="remember-me"> Remember me
        </label>
      </div>
    </form>
</body>
